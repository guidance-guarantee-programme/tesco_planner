<% content_for(:page_title, "New delivery_centre for #{@location.name}") %>
<div class="page-header">
  <ol class="breadcrumb">
    <li><%= link_to 'Tesco appointment planner', root_path %></li>
    <li><%= link_to @location.name, edit_admin_location_path(@location) %></li>
    <li class="active">New delivery centre for <%= @location.name %></li>
  </ol>

  <h1>New delivery centre for <%= @location.name %></h1>
</div>

<%= form_for @delivery_centre, url: admin_location_delivery_centres_path(@location) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <% if @delivery_centre.errors.any? %>
        <div class="alert alert-danger t-errors" role="alert">
          <h3 class="alert__heading h4">There's a problem</h3>
          <ul>
            <% @delivery_centre.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control t-name' %>
      </div>
      <div class="form-group">
        <%= f.label :reply_to %>
        <%= f.email_field :reply_to, class: 'form-control t-reply-to' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.button class: 'btn btn-primary t-submit' do %>
        Create delivery centre for <%= @location.name %>
      <% end %>
    </div>
  </div>
<% end %>
