<% content_for(:page_title, 'Manage Delivery Centres') %>
<div class="page-header">
  <ol class="breadcrumb">
    <li><%= link_to 'Employer planner', root_path %></li>
    <li class="active">Manage delivery centres</li>
  </ol>

  <h1>Manage delivery centres</h1>
  <%= link_to 'New delivery centre', new_admin_delivery_centre_path, class: 'btn btn-default' %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @delivery_centres.empty? %>
      <p class="no-content t-notice">No delivery centres.</p>
    <% else %>
      <table class="table table-bordered centred-table table-striped">
        <caption><span class="sr-only">Delivery Centres</span></caption>
        <thead>
          <tr class="table-header">
            <th>Name</th>
            <th>Booking managers</th>
            <th>Hidden</th>
            <th>Modified</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_centres.each do |delivery_centre| %>
            <tr class="t-delivery-centre">
              <td>
                <%= delivery_centre.name %>
              </td>
              <td>
                <%= delivery_centre.users.pluck(:name).to_sentence %>
              </td>
              <td>
                <%= delivery_centre.hidden ? 'Yes' : 'No' %>
              </td>
              <td>
                <%= time_ago_in_words(delivery_centre.updated_at) %> ago
              </td>
              <td>
                <%= link_to('Manage', edit_admin_delivery_centre_path(delivery_centre), class: 'btn btn-info t-manage') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
