<% content_for(:page_title, t('service.title', page_title: "Edit #{@location.name}")) %>
<div class="page-header">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Tesco appointment planner</a></li>
    <li><a href="<%= admin_locations_path %>">Manage locations</a></li>
    <li class="active"><%= @location.name %></li>
  </ol>

  <h1>Edit <%= @location.name %></h1>
</div>

<%= form_for @location, url: admin_location_path(@location) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <% if @location.errors.any? %>
        <div class="alert alert-danger t-errors" role="alert">
          <h3 class="alert__heading h4">There's a problem</h3>
          <ul>
            <% @location.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :address_line_one, 'Address' %>
        <%= f.text_field :address_line_one, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :address_line_two, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :address_line_three, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :town %>
        <%= f.text_field :town, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :county %>
        <%= f.text_field :county, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :postcode %>
        <%= f.text_field :postcode, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :active, 'Active?' %>
        <%= f.check_box :active %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.button class: 'btn btn-primary t-submit' do %>
        Update <%= @location.name %>
      <% end %>
    </div>
  </div>
<% end %>
