<% content_for(:page_title, 'Appointments') %>
<div class="page-header">
  <ol class="breadcrumb">
    <li><%= link_to 'Tesco appointment planner', root_path %></li>
    <li class="active">Appointments</li>
  </ol>

  <h1>Appointments</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @appointments.empty? %>
      <p class="no-content t-notice">No appointments.</p>
    <% else %>
      <%= paginate @appointments %>

      <table class="table table-bordered centred-table table-striped">
        <caption><span class="sr-only">Appointments</span></caption>
        <thead>
          <tr class="table-header">
            <th>Requested</th>
            <th>Customer name</th>
            <th>Slot</th>
            <th>Room</th>
            <th>Reference</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.each do |appointment| %>
            <% appointment = AppointmentDecorator.new(appointment) %>
            <tr class="t-appointment">
              <td>
                <%= time_ago_in_words(appointment.created_at) %> ago
              </td>
              <td>
                <%= appointment.full_name %>
              </td>
              <td>
                <%= appointment.slot %>
              </td>
              <td>
                <%= appointment.room %>
              </td>
              <td>
                <%= appointment.id %>
              </td>
              <td>
                <%= appointment.status %>
              </td>
              <td>
                <%= link_to('Manage', edit_appointment_path(appointment), class: 'btn btn-info t-manage') %>
                <%= link_to('Reschedule', edit_appointment_reschedule_path(appointment), class: 'btn btn-info t-reschedule') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @appointments %>
    <% end %>
  </div>
</div>
